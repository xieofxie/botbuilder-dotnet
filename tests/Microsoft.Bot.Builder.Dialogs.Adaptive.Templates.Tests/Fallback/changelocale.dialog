{
  "$schema": "../../tests.schema",
  "$kind": "Microsoft.AdaptiveDialog",
  "generator": "test.lg",
  "triggers": [
    {
      "$kind": "Microsoft.OnBeginDialog",
      "actions": [
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "${test()} ${turn.locale}"
        },
        {
          "$kind": "Microsoft.SetProperty",
          "property": "turn.locale",
          "value": "en-GB"
        },
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "${test()} ${turn.locale}"
        },
        {
          "$kind": "Microsoft.EndTurn"
        },
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "${test()} ${turn.locale}"
        }
      ]
    }
  ]
}